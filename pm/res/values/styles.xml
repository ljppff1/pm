<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="Theme" parent="@android:style/Theme"></style>

    <style name="Theme.Tabhost">
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="TextView"></style>

    <style name="TextView.Small">
        <item name="android:textSize">15dip</item>
    </style>

    <style name="TextView.Small.White">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextView.Small.Black">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextView.Middle">
        <item name="android:textSize">18dip</item>
    </style>

    <style name="TextView.Middle.White">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextView.Middle.Black">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="MyCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/clearmemory_checkbox_selector</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/trance</item>
        <item name="android:windowBackground">@color/trance</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="AnimationFade">

        <!-- PopupWindow左右弹出的效果 -->
        <item name="android:windowEnterAnimation">@anim/inuptodown</item>
        <item name="android:windowExitAnimation">@anim/outdowntoup</item>
    </style>

</resources>