<?xml version="1.0" encoding="utf-8"?>
<!-- 项目进度ExpandableListView 子：任务 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/listviewbg"
    android:paddingBottom="8dp"
    android:paddingLeft="2dp"
    android:paddingRight="2dp"
    android:paddingTop="8dp"
     >
    
    <View
        android:id="@+id/flag"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:tag="1" />
    
    <ImageView 
        android:id="@+id/iv_projectprogress_task_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:scaleType="matrix"
        android:src="@drawable/mm_submenu" 
        />
    
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/iv_projectprogress_task_right"
        android:layout_marginLeft="20dp"
        >
        
        <TextView 
            android:id="@+id/tv_projectprogress_task_names"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="名称："
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:paddingLeft="6dp"
            />
        
        <TextView 
            android:id="@+id/tv_projectprogress_task_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="工作包1	"
            android:textSize="12sp"
            android:textColor="@color/blue_1"
            android:layout_toRightOf="@id/tv_projectprogress_task_names"
            android:paddingLeft="2dp"
            />
        
        
        <TextView 
            android:id="@+id/tv_projectprogress_task_startdatas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始日期："
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:layout_below="@id/tv_projectprogress_task_names"
            android:paddingLeft="6dp"
            android:paddingTop="1dp"
            />
        
        <TextView 
            android:id="@+id/tv_projectprogress_task_startdata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2014-01-01"
            android:textSize="12sp"
            android:textColor="@color/blue_2"
            android:layout_toRightOf="@id/tv_projectprogress_task_startdatas"
            android:layout_below="@id/tv_projectprogress_task_names"
            android:paddingTop="1dp"
            />
        
        <TextView 
            android:id="@+id/tv_projectprogress_task_enddatas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结束日期："
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:layout_below="@id/tv_projectprogress_task_startdatas"
            android:paddingLeft="6dp"
            android:paddingTop="1dp"
            />
        
        <TextView 
            android:id="@+id/tv_projectprogress_task_enddata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2014-01-31"
            android:textSize="12sp"
            android:textColor="@color/blue_2"
            android:layout_toRightOf="@id/tv_projectprogress_task_enddatas"
            android:layout_below="@id/tv_projectprogress_task_startdatas"
			android:paddingTop="1dp"
            />
        
        <TextView 
            android:id="@+id/tv_projectprogress_task_durations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="持续时间："
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:layout_below="@id/tv_projectprogress_task_enddatas"
            android:paddingLeft="6dp"
            android:paddingTop="1dp"
            />
        
        <TextView 
            android:id="@+id/tv_projectprogress_task_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30天"
            android:textSize="12sp"
            android:textColor="@color/blue_2"
            android:layout_toRightOf="@id/tv_projectprogress_task_durations"
            android:layout_below="@id/tv_projectprogress_task_enddatas"
            android:paddingTop="1dp"
            />
        
        <TextView 
            android:id="@+id/tv_projectprogress_task_persons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="负责人："
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:layout_toRightOf="@id/tv_projectprogress_task_duration"
            android:layout_below="@id/tv_projectprogress_task_enddatas"
            android:paddingLeft="10dp"
            android:paddingTop="1dp"
            />
        
        <TextView 
            android:id="@+id/tv_projectprogress_task_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="王五"
            android:textSize="12sp"
            android:textColor="@color/blue_2"
            android:layout_toRightOf="@id/tv_projectprogress_task_persons"
            android:layout_below="@id/tv_projectprogress_task_enddatas"
            android:paddingTop="1dp"
            />
        
        <TextView 
            android:id="@+id/tv_projectprogress_task_estimateprogresses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预计进度："
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:layout_below="@id/tv_projectprogress_task_durations"
            android:paddingLeft="6dp"
            android:paddingTop="1dp"
            />
        
        <TextView 
            android:id="@+id/tv_projectprogress_task_estimateprogress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="80%"
            android:textSize="12sp"
            android:textColor="@color/blue_2"
            android:layout_toRightOf="@id/tv_projectprogress_task_estimateprogresses"
            android:layout_below="@id/tv_projectprogress_task_durations"
            android:paddingTop="1dp"
            />
        
        <TextView 
            android:id="@+id/tv_projectprogress_task_examineprogresses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已审进度："
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:layout_toRightOf="@id/tv_projectprogress_task_estimateprogress"
            android:layout_below="@id/tv_projectprogress_task_durations"
            android:paddingLeft="10dp"
            android:paddingTop="1dp"
            />
        
        <TextView 
            android:id="@+id/tv_projectprogress_task_examineprogress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="40%"
            android:textSize="12sp"
            android:textColor="@color/blue_2"
            android:layout_toRightOf="@id/tv_projectprogress_task_examineprogresses"
            android:layout_below="@id/tv_projectprogress_task_durations"
            android:paddingTop="1dp"
            />
        
        <TextView 
            android:id="@+id/tv_projectprogress_task_fillprogresses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="填报进度："
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:layout_below="@id/tv_projectprogress_task_examineprogresses"
            android:paddingLeft="6dp"
            android:paddingTop="1dp"
            />
        
        <TextView 
            android:id="@+id/tv_projectprogress_task_fillprogress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="60%"
            android:textSize="12sp"
            android:textColor="@color/blue_2"
            android:layout_toRightOf="@id/tv_projectprogress_task_fillprogresses"
            android:layout_below="@id/tv_projectprogress_task_examineprogresses"
            android:paddingTop="1dp"
            />
        
        
        <TextView 
            android:id="@+id/tv_projectprogress_task_filltime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2014-01-01"
            android:textSize="9sp"
            android:textColor="@color/blue"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_projectprogress_task_fillprogress"
            android:layout_marginRight="6dp"
            android:paddingTop="1dp"
            />
        
        <TextView 
            android:id="@+id/tv_projectprogress_task_filltimes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="填报日期："
            android:textSize="9sp"
            android:textColor="@android:color/black"
            android:layout_below="@id/tv_projectprogress_task_fillprogress"
            android:layout_toLeftOf="@id/tv_projectprogress_task_filltime"
            android:paddingTop="1dp"
            />
        
    </RelativeLayout>
    

</RelativeLayout>
