<?xml version="1.0" encoding="utf-8"?>
<!-- ExpandableListView 子 :任务 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listviewbg"
    android:paddingBottom="8dp"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:paddingTop="8dp"
     >
    
    <View
        android:id="@+id/flag"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:tag="1" />
    
    
    <ImageView 
        android:id="@+id/iv_projectplan_task_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:scaleType="matrix"
        android:src="@drawable/mm_submenu" 
        />
    
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:layout_toLeftOf="@id/iv_projectplan_task_right"
        android:layout_centerVertical="true"
        android:scaleType="matrix"
        android:layout_alignParentRight="true"
        
        android:layout_marginRight="18dp"
        >
        
        <Button 
            android:id="@+id/btn_projectplan_task_fillprogress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="进度填报"
             android:layout_weight="1"
            android:background="@drawable/bt_selector_bg"
            android:textSize="10sp"
            android:focusable= "false" 
            />
        
        
        <Button 
            android:id="@+id/btn_projectplan_task_checkprogress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="进度审核"
            android:background="@drawable/bt_selector_bg"
            android:textSize="10sp"
            android:layout_weight="1"
            android:focusable= "false" 
            />
          <Button 
            android:id="@+id/btn_projectplan_task_checkbackprogress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="反审核"
             android:layout_weight="1"
            android:background="@drawable/bt_selector_bg"
            android:textSize="10sp"
            android:focusable= "false" 
            />
    </LinearLayout>
    
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/iv_projectplan_task_right"
        android:layout_marginLeft="20dp"
        >
        
        
        <TextView 
            android:id="@+id/tv_cb_projectplan_task_names"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="名       称："
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:paddingLeft="6dp"
            
            />
        
        <TextView 
            android:id="@+id/tv_cb_projectplan_task_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="任务1-1"
            android:textSize="12sp"
            android:textColor="@color/blue_1"
            android:layout_toRightOf="@id/tv_cb_projectplan_task_names"
            android:paddingLeft="2dp"
            />
        
        <TextView 
            android:id="@+id/tv_cb_projectplan_task_startdatas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始日期："
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:layout_below="@id/tv_cb_projectplan_task_names"
            android:paddingLeft="6dp"
            android:paddingTop="1dp"
            />
        
        <TextView 
            android:id="@+id/tv_cb_projectplan_task_startdata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2014-01-01"
            android:textSize="12sp"
            android:textColor="@color/blue_2"
            android:layout_toRightOf="@id/tv_cb_projectplan_task_startdatas"
            android:layout_below="@id/tv_cb_projectplan_task_names"
            android:paddingTop="1dp"
            />
        
        <TextView 
            android:id="@+id/tv_cb_projectplan_task_enddatas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结束日期："
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:layout_below="@id/tv_cb_projectplan_task_startdatas"
            android:paddingLeft="6dp"
            android:paddingTop="1dp"
            />
        
        <TextView 
            android:id="@+id/tv_cb_projectplan_task_enddata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2014-01-31"
            android:textSize="12sp"
            android:textColor="@color/blue_2"
            android:layout_toRightOf="@id/tv_cb_projectplan_task_enddatas"
            android:layout_below="@id/tv_cb_projectplan_task_startdatas"
			android:paddingTop="1dp"
            />
        
        <TextView 
            android:id="@+id/tv_cb_projectplan_task_durations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="持续时间："
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:layout_below="@id/tv_cb_projectplan_task_enddatas"
            android:paddingLeft="6dp"
            android:paddingTop="1dp"
            />
        
        <TextView 
            android:id="@+id/tv_cb_projectplan_task_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30天"
            android:textSize="12sp"
            android:textColor="@color/blue_2"
            android:layout_toRightOf="@id/tv_cb_projectplan_task_durations"
            android:layout_below="@id/tv_cb_projectplan_task_enddatas"
            android:paddingTop="1dp"
            />
        
        <TextView 
            android:id="@+id/tv_cb_projectplan_task_persons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="负  责  人："
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:layout_below="@id/tv_cb_projectplan_task_duration"
            android:paddingTop="1dp"
            android:paddingLeft="6dp"
            />
        
        <TextView 
            android:id="@+id/tv_cb_projectplan_task_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="王五"
            android:textSize="12sp"
            android:textColor="@color/blue_2"
            android:layout_toRightOf="@id/tv_cb_projectplan_task_persons"
            android:layout_below="@id/tv_cb_projectplan_task_duration"
            android:paddingTop="1dp"
            />
        
        
    </RelativeLayout>
    
    

</RelativeLayout>
