<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sdmain" >
   <RelativeLayout
        android:id="@+id/costjob_rl_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/titlebar_bg_nor" >
        
      <ImageView
            android:id="@+id/costjob_iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_alignParentLeft="true"
            android:paddingLeft="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/back" />
             <ImageView 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
            android:clickable="true"
           android:id="@+id/costjob_projectby_iv"
           android:layout_centerVertical="true"
           android:paddingRight="10dp"
           android:layout_alignParentRight="true"
           android:src="@drawable/down_arrow"
           />
      
        <TextView
                android:id="@+id/costjob_projectby_items"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/costjob_iv_back"
                android:layout_toLeftOf="@id/costjob_projectby_iv"
                android:paddingRight="8dp"
                android:paddingTop="5dp"
                android:text="asdfawe"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:layout_centerVertical="true"
                android:maxLines="1"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:gravity="center"
              />
    </RelativeLayout>
   
           <RelativeLayout
          android:id="@+id/costjob_rl_search"
         android:layout_below="@id/costjob_rl_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         android:layout_marginTop="5dp"
        android:layout_centerVertical="true"
        >
          <Button
                    android:id="@+id/costjob_btnsearch"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingRight="5dp"
                    android:text="搜索"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/costjob_etsearch"
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:layout_toLeftOf="@id/costjob_btnsearch"
                    android:layout_centerVertical="true"
                    android:hint="关键字"
                    android:inputType="text"
                    android:textSize="12sp" />
    
    </RelativeLayout>
     <RelativeLayout
        android:layout_below="@id/costjob_rl_search"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >


     <com.superdata.pm.view.XListView
        android:id="@+id/costjob_lv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      />
    </RelativeLayout>
           
    
                
   


</RelativeLayout>
