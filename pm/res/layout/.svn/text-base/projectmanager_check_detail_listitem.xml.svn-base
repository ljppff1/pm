<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/listviewbg"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        >
        
        <TextView 
            android:id="@+id/tv_tab_member_numbers"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="序号"
			android:textSize="12sp"
			android:textColor="@android:color/black"
			android:gravity="center"
            />
        
        <TextView 
            android:id="@+id/tv_tab_membernumbers"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="成员编号"
			android:textSize="12sp"
			android:textColor="@android:color/black"
            />
        
        <TextView 
            android:id="@+id/tv_tab_membernames"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="成员姓名"
			android:textSize="12sp"
			android:textColor="@android:color/black"
            />
        
        <TextView 
            android:id="@+id/tv_tab_departments"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="所属部门"
			android:textSize="12sp"
			android:textColor="@android:color/black"
            />
        
        <TextView 
            android:id="@+id/tv_tab_memberpositions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="成员职位"
			android:textSize="12sp"
			android:textColor="@android:color/black"
            />
        
        <TextView 
            android:id="@+id/tv_tab_states"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="状态"
			android:textSize="12sp"
			android:textColor="@android:color/black"
			android:gravity="center"
            />
        
    </LinearLayout>
    
    
    
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        >
        
        <TextView 
            android:id="@+id/tv_tab_member_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1"
			android:textSize="12sp"
			android:textColor="@android:color/black"
			android:gravity="center"
            />
        
        <TextView 
            android:id="@+id/tv_tab_membernumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="A001"
			android:textSize="12sp"
			android:textColor="@android:color/black"
            />
        
        <TextView 
            android:id="@+id/tv_tab_membername"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="张三"
			android:textSize="12sp"
			android:textColor="@android:color/black"
            />
        
        <TextView 
            android:id="@+id/tv_tab_department"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="研发部"
			android:textSize="12sp"
			android:textColor="@android:color/black"
            />
        
        <TextView 
            android:id="@+id/tv_tab_memberposition"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="项目经理"
			android:textSize="12sp"
			android:textColor="@android:color/black"
            />
        
        <TextView 
            android:id="@+id/tv_tab_state"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
			android:textSize="12sp"
			android:textColor="@android:color/black"
			android:gravity="center"
            />
        
    </LinearLayout>
    

</LinearLayout>
