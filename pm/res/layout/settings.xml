<?xml version="1.0" encoding="utf-8"?>

<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
     >

    <LinearLayout
        android:id="@+id/ll_setting_title"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/titlebar_left"
        android:clickable="true"
        android:orientation="horizontal" >

        <include layout="@layout/titlebar_left"/>
            
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_setting_account"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_setting_account"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:gravity="center_vertical"
            android:layout_height="54dp"
            android:text="账号设置"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold" />
        
        <Button
            android:id="@+id/btn_setting_account"
            android:layout_width="fill_parent"
            android:layout_height="54dp"
            android:gravity="center_vertical"
            android:text="修改密码"
            android:textColor="#747474"
            android:textSize="16sp" 
            android:onClick="changeAccount"/>
        
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/ll_setting_userinfo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_setting_account"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="54dp"
            android:gravity="center_vertical"
            android:text="个人资料"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_setting_userinfo"
            android:layout_width="fill_parent"
            android:layout_height="54dp"
            android:gravity="center_vertical"
            android:text="修改个人资料"
            android:textColor="#747474"
            android:textSize="16sp" 
            android:onClick="changeUserInfo"
            />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/ll_setting_other"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_setting_userinfo"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="54dp"
            android:gravity="center_vertical"
            android:text="其他"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_setting_shareapp"
            android:layout_width="fill_parent"
            android:layout_height="54dp"
            android:gravity="center_vertical"
            android:text="分享应用"
            android:textColor="#747474"
            android:textSize="16sp" 
            android:onClick="shareApp"/>
        <Button
            android:id="@+id/btn_setting_suggestion"
            android:layout_width="fill_parent"
            android:layout_height="54dp"
            android:gravity="center_vertical"
            android:text="意见反馈"
            android:textColor="#747474"
            android:textSize="16sp" 
            android:onClick="suggestion"/>
    </LinearLayout>
    
</RelativeLayout>

</ScrollView>