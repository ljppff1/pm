<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e8e6e5"
    android:orientation="vertical" >
    
	<include layout="@layout/top_title" />
	
	
    <!-- <ScrollView 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        > -->
	
	<RelativeLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    >
	    
	    
	    <RelativeLayout 
	        android:id="@+id/rl_inbox_info"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp"
	        >
	        
	        <!-- <TextView 
	            android:id="@+id/from"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="From:"
	            android:textSize="15sp"
	            android:textColor="@color/back"
	            android:layout_marginTop="6dp"
	            android:layout_marginLeft="18dp"
	            />
	        
	        <TextView 
	        	android:id="@+id/tv_inbox_detail_sender"
	        	android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	        	android:text=""
	        	android:textSize="15sp"
	        	android:textColor="@color/back"
	        	android:layout_marginTop="6dp"
	        	android:layout_marginLeft="10dp"
	        	android:layout_toRightOf="@id/from"
	        	/> -->
	        
	        <TextView 
	            android:id="@+id/tv_inbox_detail_title"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text=""
	            android:textSize="15sp"
	            android:textColor="@color/back"
	            android:layout_marginTop="6dp"
	            android:layout_marginLeft="18dp"
	            />
	        
	        <!-- <TextView 
	        	android:id="@+id/tv_inbox_detail_sendtime"
	        	android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	        	android:text=""
	        	android:textSize="12sp"
	        	android:textColor="@color/black"
	        	android:layout_alignParentRight="true"
	        	android:layout_marginRight="10dp"
	       		android:layout_alignBaseline="@id/tv_inbox_detail_sender"
	        	/> -->
	        
	    </RelativeLayout>
	    
	            
	     <TextView 
	        android:id="@+id/tv_inbox_detail_content"
	        android:layout_width="fill_parent"
	        android:layout_marginLeft="6dp"
	        android:layout_marginRight="6dp"
	        android:layout_marginTop="10dp"
	        android:layout_height="280dp"
	        android:text=""
	        android:textColor="@android:color/black"
	        android:background="#ffffff"
	        android:scrollbars="vertical"
	        android:layout_below="@id/rl_inbox_info"
	        />
	            
	     <TextView 
	         android:id="@+id/tv_inbox_detail_sendtime"
	         android:layout_width="wrap_content" 
	         android:layout_height="wrap_content"
	         android:layout_below="@id/tv_inbox_detail_content"
	         android:text=""
	         android:textSize="12sp"
	         android:textColor="@color/black"
	         android:layout_alignParentRight="true"
	         android:layout_marginRight="10dp"
	         android:layout_marginTop="2dp"
	         />
	     
	    
	    
	    <LinearLayout 
	        android:layout_below="@id/tv_inbox_detail_content"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:orientation="horizontal"
	        android:layout_alignParentBottom="true"
	        android:layout_marginBottom="10dp"
	        >
	        
	        <LinearLayout 
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:orientation="horizontal"
	            android:gravity="center"
	            android:layout_marginLeft="16dp"
	            android:layout_marginRight="16dp"
	            >
	            
	            <Button 
	            	android:id="@+id/btn_inbox_detail_reply"
	            	android:layout_width="0dp"
	            	android:layout_height="25dp"
	            	android:layout_weight="4"
	            	android:text="回复"
	            	android:textSize="12sp"
	            	android:background="@drawable/public_selector_bg"
	            	/>
	        
	        <!-- <Button 
	            android:id="@+id/btn_inbox_detail_save"
	            android:layout_width="0dp"
	            android:layout_height="25dp"
	            android:layout_weight="1"
	            android:text="保存"
	            android:textSize="12sp"
	            android:background="@drawable/public_selector_bg"
	            /> -->
	            
	        	<TextView 
	            	android:layout_width="0dp"
	            	android:layout_height="wrap_content"
	            	android:layout_weight="1"
	            	/>
	            
	        
	        	<Button 
	            	android:id="@+id/btn_inbox_detail_delete"
	            	android:layout_width="0dp"
	            	android:layout_height="25dp"
	            	android:layout_weight="4"
	            	android:text="删除"
	            	android:textSize="12sp"
	            	android:background="@drawable/public_selector_bg"
	            	/>
	            
	        </LinearLayout>
	        
	    </LinearLayout>
	    
	</RelativeLayout>
	
	
	<!-- </ScrollView> -->
    
    
</LinearLayout>
