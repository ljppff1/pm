<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical" >
    
    <LinearLayout
        android:id="@+id/ll_setting_title"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/titlebar_left"
        android:clickable="true"
        android:orientation="horizontal" >

        <include layout="@layout/titlebar_left"/>
            
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        >
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            >
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="昵称:"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:textColor="#747474"
                />
            
            <EditText 
                android:id="@+id/et_userinfo_setting_nick"
                android:layout_width="wrap_content"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:inputType="text"
                />
            
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            >
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="出生日期:"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:textColor="#747474"
                />
            
            <EditText 
                android:id="@+id/et_userinfo_setting_birthday"
                android:layout_width="wrap_content"
                android:layout_weight="9"
                android:layout_height="wrap_content"
                android:inputType="date"
                />
            
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            >
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="姓名:"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:textColor="#747474"
                />
            
            <EditText 
                android:id="@+id/et_userinfo_setting_username"
                android:layout_width="wrap_content"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:editable="false"
                />
            
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            >
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="性别:"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:textColor="#747474"
                />
            
            <RadioGroup 
                android:id="@+id/rg_userinfo_setting_sex"
                android:layout_width="wrap_content"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <RadioButton 
                    android:id="@+id/rb_userinfo_setting_male"
                    android:text="男"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    />
                <RadioButton 
                    android:id="@+id/rb_userinfo_setting_femail"
                    android:text="女"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    />
                
            </RadioGroup>
            
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            >
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="职务:"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:textColor="#747474"
                />
            
            <EditText 
                android:id="@+id/et_userinfo_setting_duty"
                android:layout_width="wrap_content"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:inputType="text"
                />
            
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            >
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="入职时间:"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:textColor="#747474"
                />
            
            <EditText 
                android:id="@+id/et_userinfo_setting_joindate"
                android:layout_width="wrap_content"
                android:layout_weight="9"
                android:layout_height="wrap_content"
                android:inputType="date"
                />
            
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            >
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="学历:"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:textColor="#747474"
                />
            
            <EditText 
                android:id="@+id/et_userinfo_setting_education"
                android:layout_width="wrap_content"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:inputType="text"
                />
            
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            >
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="联系电话:"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:textColor="#747474"
                />
            
            <EditText 
                android:id="@+id/et_userinfo_setting_phonenumber"
                android:layout_width="wrap_content"
                android:layout_weight="9"
                android:layout_height="wrap_content"
                android:inputType="number"
                />
            
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            >
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="现居住地:"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:textColor="#747474"
                />
            
            <EditText 
                android:id="@+id/et_userinfo_setting_address"
                android:layout_width="wrap_content"
                android:layout_weight="9"
                android:layout_height="wrap_content"
                android:inputType="text"
                />
            
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            >
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="户籍地址:"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:textColor="#747474"
                />
            
            <EditText 
                android:id="@+id/et_userinfo_setting_censusregister"
                android:layout_width="wrap_content"
                android:layout_weight="9"
                android:layout_height="wrap_content"
                android:inputType="text"
                />
            
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            >
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="所在部门:"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:textColor="#747474"
                />
            
            <EditText 
                android:id="@+id/et_userinfo_setting_department"
                android:layout_width="wrap_content"
                android:layout_weight="9"
                android:layout_height="wrap_content"
                android:inputType="text"
                />
            
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            >
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="电子邮箱:"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:textColor="#747474"
                />
            
            <EditText 
                android:id="@+id/et_userinfo_setting_email"
                android:layout_width="wrap_content"
                android:layout_weight="9"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                />
            
        </LinearLayout>
        
    </LinearLayout>
    

</LinearLayout>

</ScrollView>
